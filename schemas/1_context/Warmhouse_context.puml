@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/refs/heads/master/C4_Context.puml

Person(user, "Клиент")
System(warmhouse, "Система WarmHouse")
System_Ext(sensor, "Подключаемое устройство")
System_Ext(core_legacy, "Монолитная система WarmHouse")

Rel(user, warmhouse, "Добавляет, просматривает и управляет устройствами")
Rel(warmhouse, sensor, "Посылает команды")
Rel(warmhouse, core_legacy, "Поддержка старой системы")
Rel(sensor, warmhouse, "Обновляет состояние")

@enduml